                    $qb->select('i.place, i.name, p.type, r.rating, r.aproved')
                            ->from('\PROJ\Entities\Review', 'r')
                            ->leftJoin('r.project', 'p')
                            ->leftJoin('p.institute', 'i')
                            ->where($qb->expr()->eq('p.student', $qb->expr()->literal($user->getStudent()->getId())))
                            ->orderBy('i.name', 'ASC');
                    $res = $qb->getQuery()->getResult();

                    foreach ($res as $r) {
                        if ($r['aproved'] == 0) {
                            $status = 'Pending';
                        } elseif ($r['aproved'] == 1) {
                            $status = 'Aproved';
                        } else {
                            $status = 'Declined';
                        }
                        ?>
